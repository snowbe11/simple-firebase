{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "ESNext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
    "src/**/*.ts"
  ]
}